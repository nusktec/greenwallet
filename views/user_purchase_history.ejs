<!doctype html>
<html class="no-js" lang="en">
<head>
    <!--Get footer.js done-->
    <% include ./partials/head.ejs %>
</head>

<body>
<div class="main-wrapper">
    <div class="app header-fixed footer-fixed sidebar-fixed" id="app">
        <header class="header">
            <!--Header class-->
            <% include ./partials/header.ejs %>
        </header>

        <aside class="sidebar">
            <!--Side bar-->
            <% include ./partials/nav.bar.ejs %>
        </aside>

        <div class="sidebar-overlay" id="sidebar-overlay"></div>
        <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
        <div class="mobile-menu-handle"></div>

        <article class="content dashboard-page">
            <!--pour your content here-->
            <section class="section">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-block">
                                <div class="card-title-block">
                                    <h3 class="title"> Purchase History </h3>
                                </div>
                                <section class="example">
                                    <div class="table-flip-scroll">
                                        <table class="table table-striped table-bordered table-hover flip-content">
                                            <thead class="flip-header">
                                            <tr>
                                                <th>S/N</th>
                                                <th>Purchase Title / Type</th>
                                                <th>Description</th>
                                                <th>Identity No. / SN</th>
                                                <th>Status</th>
                                                <th>Date</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% if(ph){ %>
                                            <% for (var i = 0; i < ph.length; i++){ %>
                                            <tr class="odd gradeX">
                                                <td><%=i+1%></td>
                                                <td><%=ph[i].p_title%></td>
                                                <td class="center"><%=ph[i].p_desc%></td>
                                                <td class="center"><%=ph[i].p_sn%></td>
                                                <td class="center"><%- (ph[i].p_status==1)?'<o style="color: green">Success</o>':'Failed';%></td>
                                                <td class="center"><%=ph[i].p_date%></td>
                                            </tr>
                                            <% } %>
                                            <% }else{ %>
                                            <tr class="odd gradeX">
                                                <p style="color: red;">No Purchase Record(s) found</p>
                                            </tr>
                                            <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </article>

        <footer class="footer">
            <!--Partial footer-->
            <% include ./partials/footer.ejs %>
        </footer>

    </div>
</div>
<!-- Reference block for JS -->
<div class="ref" id="ref">
    <div class="color-primary"></div>
    <div class="chart">
        <div class="color-primary"></div>
        <div class="color-secondary"></div>
    </div>
</div>
<!--Get footer.js done-->
<% include ./partials/foot.ejs %>
</body>
</html>