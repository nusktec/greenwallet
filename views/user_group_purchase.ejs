<!doctype html>
<html class="no-js" lang="en">
<head>
    <!--Get footer.js done-->
    <% include ./partials/head.ejs %>
</head>

<body>
<div class="main-wrapper">
    <div class="app header-fixed footer-fixed sidebar-fixed" id="app">
        <header class="header">
            <!--Header class-->
            <% include ./partials/header.ejs %>
        </header>

        <aside class="sidebar">
            <!--Side bar-->
            <% include ./partials/nav.bar.ejs %>
        </aside>

        <div class="sidebar-overlay" id="sidebar-overlay"></div>
        <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
        <div class="mobile-menu-handle"></div>

        <article class="content dashboard-page">
            <!--pour your content here-->
            <section class="section">
                <div class="row sameheight-container">
                    <div class="col-md-6">
                        <div class="card card-block sameheight-item" style="height: 700px;">
                            <div class="title-block">
                                <h3 class="title"> Create a new group voucher </h3>
                                <small id="gpin-info"><%- data.resp.gv %></small>
                            </div>
                            <form method="post" role="form">
                                <div class="form-group">
                                    <label class="control-label">Voucher Code</label>
                                    <input value="<%= data.vcode %>" readonly="readonly" name="vpin" type="text"
                                           class="form-control underlined"></div>
                                <div class="form-group">
                                    <label class="control-label">Voucher Amount</label>
                                    <input name="vamount" type="text" class="form-control underlined"
                                           placeholder="&#8358;<%= user[0].balance %>"></div>
                                <div class="form-group">
                                    <input name="btncr" type="submit" class="btn btn-primary rounded"
                                           value="Create Now"></div>
                            </form>
                        </div>
                    </div>

                    <!--info script-->
                    <script>
                        setInterval(function () {
                            $('#gpin-info').html('');
                        }, 8000);
                    </script>
                    <!--info script-->

                    <div class="col-md-6" id="v-app">
                        <div class="card card-block sameheight-item" style="height: 700px;">
                            <div class="title-block">
                                <h3 class="title"> Fund group voucher </h3>
                                <small v-html="data.msg"></small>
                            </div>
                            <form method="post" role="form">
                                <div class="form-group">
                                    <label class="control-label">Group voucher code</label>
                                    <input tamount type="text" class="form-control underlined"></div>
                                <div class="form-group">
                                    <label class="control-label">Deposit Amount</label>
                                    <input damount type="text" class="form-control underlined"></div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-danger rounded" value="Credit Now"></div>
                            </form>
                        </div>
                    </div>
                </div>

            </section>

            <section class="section">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-block">
                                <div class="card-title-block">
                                    <h3 class="title"> Group Voucher History</h3>
                                </div>
                                <section class="example">
                                    <div class="table-flip-scroll">
                                        <table class="table table-striped table-bordered table-hover flip-content">
                                            <thead class="flip-header">
                                            <tr>
                                                <th>S/N</th>
                                                <th>Group Voucher Pin</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th>Date</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% var i = 0; user.forEach(function (p) {
                                                i++;
                                            %>
                                            <tr>
                                                <td><%= i; %></td>
                                                <td><%= p.v_pin; %></td>
                                                <td>&#8358;<%= p.v_value; %></td>
                                                <%- (p.v_status == 1)?"<td style='background-color: #ffa7a7; color: #000000'>Used</td>":"<td style='background-color: #91f1b4; color: #000000;'>Valid</td>" %>
                                                <td><%= p.v_created; %></td>
                                            </tr>
                                            <%
                                            }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </article>

        <footer class="footer">
            <!--Partial footer-->
            <% include ./partials/footer.ejs %>
        </footer>

    </div>
</div>
<!-- Reference block for JS -->
<div class="ref" id="ref">
    <div class="color-primary"></div>
    <div class="chart">
        <div class="color-primary"></div>
        <div class="color-secondary"></div>
    </div>
</div>
<!--Get footer.js done-->
<% include ./partials/foot.ejs %>
</body>
</html>
